---
import '../styles/benefits.css';
import { Icon } from 'astro-icon/components';
import { getTranslation } from '../i18n/utils.js';

// Obtener props del componente
const { locale = 'es' } = Astro.props;
const translations = getTranslation(locale);
const t = translations as any; // Type casting para evitar errores de TypeScript
---

<!-- Benefits Section -->
<section id="beneficios" class="benefits">
    <div class="container">
        <header class="section-header">
            <h2 class="section-title">{t.benefits.title}</h2>
            <p class="section-subtitle" set:html={t.benefits.subtitle}></p>
        </header>
        <div class="benefits-grid">
            {Object.entries(t.benefits.cards).map(([id, card]) => {
                const benefitCard = card as { icon: string; title: string; description: string };
                return (
                    <article class="benefit-card">
                        <div class="benefit-icon" aria-hidden="true">
                            <Icon name={benefitCard.icon} size={64} />
                        </div>
                        <h3>{benefitCard.title}</h3>
                        <p set:html={benefitCard.description}></p>
                    </article>
                );
            })}
        </div>
    </div>
</section>
